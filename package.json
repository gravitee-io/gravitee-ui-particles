    "ngx-file-helpers": "12.0.0",
    "prismjs": "^1.29.0",
    "rxjs": "7.8.1",
    "tslib": "2.6.3",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-builders/jest": "18.0.0",
